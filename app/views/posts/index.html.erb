<div class="parent">

  <div class="left" id="posts">
    <p id="notice"><%= notice %></p>

    <h1>Posts</h1>

    <table id="posts_list">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Visit Count</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= post.visit_count %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <%= link_to 'New Post', new_post_path, {id: "new_post"} %>

  </div>

  <div class="right" id="top_10_posts">

    <h1>TOP 10 Posts</h1>

    <div class="top-10-container" id="top_10_container">
      <span class="tips"></span>
      <ul class='top-10-list' id="top_10_list"></ul>
    </div>

  </div>
</div>
